<h1>Display your Pirate here</h1>
<div class="pirate">
<h3> Pirate Name: <%= @pirate.name %> </h3>
<h4> Pirate Weight: <%= @pirate.weight %> lbs </h4>
<h4> Pirate Height: <%= @pirate.height %> inches</h4>

<h2>Display your first ship here</h2>
<h1>Ship One</h1>
<% @ships.each.with_index do |ship, index| %>
<div class="ship">
    <% if index == 0 %>
    <p> Name: <%= ship.name %> </p>
    <p> Type: <%= ship.type %> </p>
    <p> Booty: <%= ship.booty %> </p>
    <% end %>
<% end %>

<h2>Display your second ship here</h2>

<h1>Ship Two</h1>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
    <% if index == 1 %>
    <p> Name: <%= ship.name %> </p>
    <p> Type: <%= ship.type %> </p>
    <p> Booty: <%= ship.booty %> </p>
    <% end %>
<% end %>
