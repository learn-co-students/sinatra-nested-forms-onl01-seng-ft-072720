<h1>Display your Pirate here</h1>
<h3><p>Name: <%= @pirate.name %></p></h3>
<h3><p>weight: <%= @pirate.weight %> stone</p></h3>
<h3><p>height: <%= @pirate.height %> inches</p></h3>


<h2>Ship One</h2>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
    <% if index == 0 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
    <% end %>
    </div>

<h2>Ship Two</h2>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
    <% end %>
    </div>
